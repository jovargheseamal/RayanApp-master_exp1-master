<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:background="@drawable/bgg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">


            <android.support.v7.widget.CardView

                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="60dp"
                android:padding="10dp"
                app:cardElevation="10dp"
                >

                <android.support.v7.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    app:cardCornerRadius="55dp"
                    android:layout_gravity="center">

                 <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/prof"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"/>

                </android.support.v7.widget.CardView>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView


                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                app:cardBackgroundColor="@android:color/white"
                android:layout_marginTop="140dp"
                android:layout_marginBottom="20dp"
                android:layout_height="170dp"
                app:cardCornerRadius="10dp"
                android:padding="10dp"
                app:cardElevation="5dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="bottom"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:padding="10dp"
                        android:text="Joan John"
                        android:layout_marginBottom="15dp"
                        android:textColor="#926c3e"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="50dp"
                        android:padding="5dp"

                        android:gravity="center">

                        <TextView
                            android:id="@+id/txtswitchaccnt"
                            android:clickable="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginEnd="5dp"
                            android:padding="10dp"
                            android:background="@drawable/tvborder"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/grid"
                            android:layout_width="match_parent"
                            android:text="Switch Account"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:id="@+id/txtdashboard"
                            android:clickable="true"
                            android:padding="10dp"
                            android:background="@drawable/tvborder"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textColor="@color/grid"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:text="Dashboard"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </FrameLayout>


        <HorizontalScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scrollbars="none">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="5dp"
                android:id="@+id/shapeLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                 <android.support.v7.widget.CardView
                     android:layout_width="120dp"
                     android:layout_margin="5dp"
                     app:cardCornerRadius="10dp"
                     android:layout_height="match_parent"
                     app:cardElevation="5dp">
                    <LinearLayout

                    android:background="@drawable/buttonborder"

                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:id="@+id/cmpnylay"
                    android:clickable="true"
                    android:layout_height="match_parent">

                     <ImageView
                         android:padding="5dp"
                         android:layout_weight="1"
                        android:src="@drawable/enterprise"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                     <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:text="Company"
                        android:textStyle="bold"
                        android:layout_height="30dp" />

                    </LinearLayout>
                 </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="120dp"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_height="match_parent"
                    app:cardBackgroundColor="@color/secondary"
                    app:cardElevation="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:background="@drawable/buttonborder"
                    android:orientation="vertical"
                    android:id="@+id/proflay"
                    android:clickable="true"


                    android:layout_height="match_parent">

                    <ImageView
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:src="@drawable/user"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <TextView
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:text="Profile"
                        android:layout_height="30dp" />

                </LinearLayout>

                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="120dp"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="4dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@drawable/buttonborder"
                    android:id="@+id/notflay"
                    android:clickable="true"
                    android:layout_height="match_parent">

                    <ImageView
                        android:padding="5dp"
                        android:layout_weight="1"

                        android:src="@drawable/bell2"
                        android:gravity="center"

                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <TextView
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:text="Notification"
                        android:layout_height="30dp" />

                </LinearLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="120dp"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_height="match_parent"
                    app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:id="@+id/newslay"
                    android:clickable="true"
                    android:background="@drawable/buttonborder"
                    android:layout_height="match_parent">

                    <ImageView
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:src="@drawable/file"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <TextView
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:text="News Feed"
                        android:layout_height="30dp" />

                </LinearLayout>
                </android.support.v7.widget.CardView>



                <android.support.v7.widget.CardView
                    android:layout_width="120dp"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="10dp"
                    android:layout_height="match_parent"
                    app:cardElevation="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:id="@+id/contactlay"
                    android:background="@drawable/buttonborder"
                    android:clickable="true"
                    android:layout_height="match_parent">

                    <ImageView
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:src="@drawable/contact1"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" />

                    <TextView
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:text="Contact Us"
                        android:layout_height="30dp" />

                </LinearLayout>
                </android.support.v7.widget.CardView>



            </LinearLayout>


        </HorizontalScrollView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp">



                <TextView
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find Us Here"
                    android:textStyle="bold"/>

                    <!--<fragment-->
                    <!--android:layout_below="@+id/find"-->
                    <!--android:id="@+id/map"-->
                    <!--android:layout_marginBottom="10dp"-->
                        <!--android:layout_marginTop="40dp"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:layout_marginRight="10dp"-->
                    <!--android:name="com.google.android.gms.maps.MapFragment"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"/>-->



        </android.support.v7.widget.CardView>






    </LinearLayout>

</ScrollView>